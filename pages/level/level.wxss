/* pages/level/level.wxss */
.bag {
  position: fixed;
  height: 100%;
  width: 100%;
  /* border: 1px solid #000; */
}
.bag .level {
  width: 100%;
  height: 100%;
}
.btn {
  position: absolute;
  bottom: 20rpx;
  right: 15rpx;
  width: 120rpx;
  height: 120rpx;
  z-index: 99;
}
.btnimg {
  width: 100%;
  height: 100%;
}
/* 添加一个窗口，溢出区隐藏 */
.vilue {
  position: absolute;
  bottom: 150rpx;
  right: 15rpx;
  width: 120rpx;
  height: 370rpx;
  /* border: 1px solid #000; */
  z-index: 99;
  overflow: hidden;
}
/* 显示菜单 */
.tag {
  position: absolute;
  bottom: 20rpx;
  width: 120rpx;
  height: 360rpx;
  animation:mymove 0.5s;
}
/* 隐藏菜单 */
.none {
  /* display: none; */
  position: absolute;
  bottom: 0rpx;
  width: 120rpx;
  height: 0rpx;
  animation:mynone 0.5s;
}
.tag image,.none image {
  width: 120rpx;
  height: 120rpx; 
}
@keyframes mymove
{
from {height:0px;}
to {height:360rpx;}
} 
@keyframes mynone{
from {height:360rpx;}
to {height:0rpx;} 
}
